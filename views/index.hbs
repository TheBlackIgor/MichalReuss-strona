<script>
    const bg = document.querySelector('.bg')
    let bgTab = "{{{bgImages}}}".split(',')
    let imC = 0
    let appended = 0

    window.onload = function setSlider() {
        // console.log('wywołanie')
        for (let i = 0; i < bgTab.length; i++) {
            let img = document.createElement('img')
            img.setAttribute('src', `../gfx/main-bg/${bgTab[i]}`)
            img.setAttribute('id', `img${i}`)
            img.classList = 'hide'
            document.getElementById('slider').append(img)
        }
        document.getElementById('img' + imC).classList = 'show'
        console.log('appended')
        setInterval(changeBgImage, 8000)
    }
    const changeBgImage = () => {
        document.getElementById('img' + imC).classList = 'hide'
        if (imC === bgTab.length - 1) imC = 0
        else imC++
        document.getElementById('img' + imC).classList = 'show'
    }
</script>